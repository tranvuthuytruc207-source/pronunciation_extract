{
  "builds": [
    {
      "src": "api/generate-speech.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/generate-speech",
      "dest": "/api/generate-speech.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
